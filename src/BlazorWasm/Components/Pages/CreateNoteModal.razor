<EditForm Model="@model">
  <MudDialog>
    <TitleContent>
      <MudText Typo="Typo.h6">Create Not</MudText>
    </TitleContent>
    <DialogContent>
      <MudTextField T="string" Label="Title" @bind-value="@model.Title" />
      <MudTextField T="string" Label="Content" @bind-value="@model.Content" Lines="10" />
    </DialogContent>
    <DialogActions>
      <MudButton Variant="Variant.Filled"
                 ButtonType="ButtonType.Submit"
                 Color="Color.Success"
                 OnClick="@Submit">
        Submit
      </MudButton>
    </DialogActions>
  </MudDialog>
</EditForm>
